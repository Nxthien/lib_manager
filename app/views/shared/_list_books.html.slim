.category-list
  - @books.each do |book|
    li.category-item style='display: inline-block'
      figure
        = image_tag 'category-filter-img-03.jpg'
        figcaption.bg-orange
          .info-block
            h4 #{book.name}
            span.author
              strong Author:
              - book.authors.each do |author|
                | #{author.name},
            .rating
              select.rating-item
                - 5.times do |i|
                  - if i < book.rating
                    option selected="selected" value="#{i+1}" #{i+1}
                  - else
                    option value="#{i+1}" #{i+1}
            p #{book.description}
            = link_to 'Read More', item_path(book)
            ol
              li
                a.icon data-item="#{book.to_json}" onClick="add_item(event)"
                  i.fa.fa-shopping-cart
              li
                i.fa.fa-heart
              li
                i.fa.fa-envelope
              li
                i.fa.fa-share-alt
              li
                i.fa.fa-search
  .clearfix
sass:
  .icon:hover
    color: white
    cursor: pointer
javascript:
  $('.rating-item').barrating({
    theme: 'bootstrap-stars',
    readonly: true,
  });
